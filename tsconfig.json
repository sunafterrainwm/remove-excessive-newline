{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "src",
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"outDir": "build",
		"strict": true,
		"skipLibCheck": true,
		"target": "es2016"
	},
	"include": [
		"src/*.ts"
	]
}